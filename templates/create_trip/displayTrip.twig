{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Sortie {{trip.name}}{% endblock %}

{% block body %}


    <h2>Afficher une sortie</h2>

        <div class="tripContainer">

            <div class="tripForm">
                <p>Nom de la sortie : {{trip.name}}</p>
                <p>Date et heure de la sortie : {{trip.dateStartHour | date("d-m-Y H:i:s")}}</p>
                <p>Date limite d'inscription : {{trip.dateLimitRegistration | date("d-m-Y")}}</p>
                <p>Nombre de place : {{trip.nbMaxRegistration}}</p>
                <p>Durée : {{trip.duration}} minutes</p>
                <p>Description et infos : {{trip.tripDescription}}</p>

            </div>

            <div class="tripForm">

                <p>Campus : {{trip.campus.name}}</p>
                <p>Lieu : {{trip.place.name}}</p>
                <p>Rue : {{trip.place.street}}</p>
                <p>Code Postal : {{trip.place.city.postalCode}}</p>
                <p>Latitude : {{trip.place.latitude}}</p>
                <p>Longitude : {{trip.place.longitude}}</p>


            </div>


        </div>





    <h2>Liste des participants inscrits</h2>

    <table>
        <thead>
        <tr>
            <th>Pseudo</th>
            <th>Nom et Prénom</th>
        </tr>
        </thead>

        <tbody>
        {%for item in listParticipants%}
            <tr>
                <td><a href="{{ path('app_participant_show', {'id': item.id}) }}">{{item.pseudo}}</a></td>
                <td><a href="{{ path('app_participant_show', {'id': item.id}) }}">{{item.firstName}} {{item.lastName}}</a></td>
            </tr>
        {%endfor%}
        </tbody>
    </table>

{% endblock %}
